<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="vpiCirclePageIndicatorStyle">@style/CustomCirclePageIndicator</item>
        <item name="vpiLinePageIndicatorStyle">@style/CustomLinePageIndicator</item>
        <item name="vpiNumberPageIndicatorStyle">@style/CustomNumberPageIndicator</item>
    </style>

    <style name="CustomCirclePageIndicator">
        <item name="pageColor">#FF8B9B9F</item>
        <item name="fillColor">#FFFFFFFF</item>
        <item name="strokeColor">#FFCCCCCC</item>
        <item name="strokeWidth">1dp</item>
        <item name="radius">4dp</item>
    </style>

    <style name="CustomLinePageIndicator">
        <item name="selectedColor">#42a5f5</item>
        <item name="unselectedColor">#80deea</item>
        <item name="strokeWidth">8dp</item>
        <item name="lineLength">24dp</item>
        <item name="lineGap">12dp</item>
        <item name="lineRoundCap">true</item>
        <item name="android:background">@drawable/round_corner_drawable</item>
    </style>

    <style name="CustomNumberPageIndicator">
        <item name="pageTextSize">12sp</item>
        <item name="pageTextColor">#FFFFFFFF</item>
        <item name="separator">/</item>
    </style>
</resources>